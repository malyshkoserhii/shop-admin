{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"~assets/*": [
				"src/assets/*"
			],
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~store/*": [
				"src/store/*"
			],
			"~typings/*": [
				"src/typings/*"
			],
			"~/*": [
				"src/*"
			],
			"~poppins/*": [
				"src/assets/poppins/*"
			],
			"~fonts/*": [
				"src/assets/fonts/*"
			],
			"~images/*": [
				"src/assets/images/*"
			],
			"~services/*": [
				"src/services/*"
			],
			"~products/*": [
				"src/modules/products/screens/products/*"
			],
			"~app/*": [
				"src/modules/app/*"
			],
			"~auth/*": [
				"src/modules/auth/*"
			],
			"~constants/*": [
				"src/shared/constants/*"
			],
			"~components/*": [
				"src/modules/auth/components/*"
			],
			"~pages/*": [
				"src/modules/auth/pages/*"
			],
			"~screens/*": [
				"src/modules/products/screens/*"
			],
			"~login/*": [
				"src/modules/auth/pages/login/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./vite.config.ts",
		".eslintrc.cjs"
	],
	"exclude": [
		"./node_modules",
		"test",
		"./dist",
		"**/*spec.ts"
	]
}